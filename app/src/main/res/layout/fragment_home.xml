    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_weather_wait"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@color/colorPrimary"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/weather_cityCountry"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/weather_conditionIcon"
        android:layout_marginStart="3dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/weather_conditionIcon" />

    <ImageView
        android:id="@+id/weather_conditionIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_weather_wait"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        app:srcCompat="@drawable/ic_menu_manage" />
    <!--    android:src="@drawable/ic_menu_manage"-->

    <TextView
        android:id="@+id/weather_conditonDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weather_conditionIcon"
        android:layout_alignLeft="@id/weather_conditionIcon"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/weather_temperature"
        style="@style/tempStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weather_cityCountry"
        android:layout_alignBaseline="@id/weather_conditonDescription"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/weather_conditonDescription"
        android:layout_toRightOf="@id/weather_conditonDescription"
        android:textColor="@color/uwPurple" />

    <TextView
        android:id="@+id/weather_pressureLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weather_temperature"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text="Pressure" />

    <TextView
        android:id="@+id/weather_pressure"
        style="@style/valData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/weather_pressureLabel"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="0dp"
        android:layout_toEndOf="@+id/weather_pressureLabel"
        android:layout_toRightOf="@id/weather_pressureLabel"
        android:textColor="@color/uwGold" />

    <TextView
        android:id="@+id/weather_humidityLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/weather_pressureLabel"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:text="Humidity" />

    <TextView
        android:id="@+id/weather_humidity"
        style="@style/valData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/weather_humidityLabel"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="0dp"
        android:layout_toEndOf="@+id/weather_humidityLabel"
        android:layout_toRightOf="@id/weather_humidityLabel"
        android:textColor="@color/uwGold" />

    <TextView
        android:id="@+id/weather_windLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/weather_humidityLabel"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:text="Wind" />

    <TextView
        android:id="@+id/weather_windSpeed"
        style="@style/valData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/weather_windLabel"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="0dp"
        android:layout_toEndOf="@+id/weather_windLabel"
        android:layout_toRightOf="@id/weather_windLabel"
        android:textColor="@color/uwGold" />

    <TextView
        android:id="@+id/weather_windDegree"
        style="@style/valData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/weather_windLabel"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="0dp"
        android:layout_toEndOf="@+id/weather_windSpeed"
        android:layout_toRightOf="@id/weather_windSpeed"
        android:textColor="@color/uwGold" />

